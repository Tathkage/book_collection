<p style="color: green"><%= notice %></p>

<h1>User Books</h1>

<div id="user_books">
  <% @user_books.each do |user_book| %>
    <%= render user_book %>
    <p>
      <%= link_to "Show User Book Details", user_book %>
    </p>
  <% end %>

  <!-- Link to Create a New User Book -->
  <p>
    <%= link_to "Create New User Book", new_user_book_path %>
  </p>

  <!-- Links to User and Book Indexes -->
  <p>
    <%= link_to "View All Users", users_path %>
    <%= link_to "View All Books", books_path %>
  </p>
</div>
